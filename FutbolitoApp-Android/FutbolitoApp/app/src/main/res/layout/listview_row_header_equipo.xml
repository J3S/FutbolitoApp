<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background = "@color/colorHeaderTable"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/categoria_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "2"
            android:gravity = "center"
            android:padding = "5dp"
            android:textStyle="bold"
            android:text = ""
            android:id="@+id/categoria_torneo"
            android:textColor = "@color/colorTextHeaderTable"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "0.8"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:text = "@string/pos_equipo"
            android:id="@+id/pos_equipo"
            android:textColor = "@color/colorTextHeaderTable"/>
    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "2"
        android:padding = "5dp"
        android:textStyle="bold"
        android:text = "@string/nom_equipo"
        android:id="@+id/nom_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:padding = "5dp"
        android:textStyle="bold"
        android:text = "@string/pj_equipo"
        android:id="@+id/pj_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:gravity = "center"
        android:padding = "5dp"
        android:text = ""
        android:id="@+id/pg_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"
        android:visibility="gone"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:gravity = "center"
        android:padding = "5dp"
        android:text = ""
        android:id="@+id/pe_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"
        android:visibility="gone"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:gravity = "center"
        android:padding = "5dp"
        android:text = ""
        android:id="@+id/pp_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"
        android:visibility="gone"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:gravity = "center"
        android:padding = "5dp"
        android:text = ""
        android:id="@+id/gf_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"
        android:visibility="gone"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:gravity = "center"
        android:padding = "5dp"
        android:text = ""
        android:id="@+id/gc_equipo_head"
        android:textColor = "@color/colorTextHeaderTable"
        android:visibility="gone"/>

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "0.8"
        android:padding = "5dp"
        android:textStyle="bold"
        android:text = "@string/gd_equipo"
        android:id="@+id/gd_equipo_head"
        android:textColor = "@color/colorTextHeaderTable" />

    <TextView
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:padding = "5dp"
        android:textStyle="bold"
        android:text = "@string/pts_equipo"
        android:id="@+id/pts_equipo_head"
        android:textColor = "@color/colorTextHeaderTable" />
        </LinearLayout>

    <TextView
        android:id = "@+id/id_equipo"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = ""
        android:singleLine = "true"
        android:visibility="gone"/>

</LinearLayout>